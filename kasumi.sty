\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{kasumi}

% LaTeX2e bug fixes
\RequirePackage{fixltx2e}

% Improves floating objects
\RequirePackage{float}

% Custom headers
\RequirePackage{fancyhdr} 

% Graphic insertion
\RequirePackage{graphicx}

% Custom colors
\RequirePackage{xcolor}

% Nice looking algorithms
\RequirePackage[ruled]{algorithm2e}

% Hotlinks (with boxes disabled by default)
\RequirePackage[hidelinks]{hyperref}

% Display code w/ syntax highlighting (requires Python and Pygments; must be compiled with -shell-escape)
\RequirePackage{minted}

% Use apacite for APA style references
\RequirePackage{apacite}
\RequirePackage{apacdoc}
\bibliographystyle{apacite}
% Define doiprefix to be blank because of a bug w/ apacite
\def\doiprefix{}

% Appendix formatting
\RequirePackage[toc,page]{appendix}

% booktabs for improved tables and array for wrapping columns
\RequirePackage{array}
\RequirePackage{booktabs}

% Configure page margins
\topmargin=-0.45in
\evensidemargin=0in
\oddsidemargin=0in
\textwidth=6.5in
\textheight=9.0in
\headsep=0.25in

% Set up the header and footer variables
\newcommand{\headerLeft}{}
\newcommand{\headerMiddle}{}
\newcommand{\headerRight}{}
\newcommand{\footerLeft}{}
\newcommand{\footerMiddle}{}
\newcommand{\footerRight}{}
% Configure the actual header and footer data
\pagestyle{fancy}
\lhead{\headerLeft} % Top left header
\chead{\headerMiddle} % Top center head
\rhead{\headerRight} % Top right header
\lfoot{\footerLeft} % Bottom left footer
\cfoot{\footerMiddle} % Bottom center footer
\rfoot{\footerRight} % Bottom right footer
\renewcommand\headrulewidth{0.4pt} % Size of the header rule
\renewcommand\footrulewidth{0.4pt} % Size of the footer rule

% Function for inserting Java code listings
%   [1] file to include relative to latex working directory
%   [2] caption displayed below code
%   [3] label for referencing
\definecolor{JavaCodeBg}{rgb}{0.15, 0.16, 0.13}
\newcommand{\javacode}[3]{
	\begin{listing}[H]
		\inputminted[linenos=true, style=monokai, tabsize=2, bgcolor=JavaCodeBg, fontsize=\scriptsize]{java}{#1}
		\caption{#2}
		\label{#3}
	\end{listing}
}
